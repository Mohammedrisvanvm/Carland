{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./build",
    "baseUrl": ".",

    "sourceMap": true,
    "pretty": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules", "build"] 
}
